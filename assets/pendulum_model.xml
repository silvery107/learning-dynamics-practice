<mujoco model="pendulum">
    <compiler angle="radian" autolimits="true"/>
    <option timestep="0.01" gravity="0 0 -9.81" integrator="RK4"/>

    <default>
        <default class="pendulum">
            <geom type="capsule" size="0.02" rgba="0.1 0.2 0.8 1"/>
            <joint axis="0 1 0" damping="0.1" armature="0.01"/>
        </default>
    </default>

    <keyframe>
        <key name="0" qpos="3" />
    </keyframe>

    <worldbody>
        <!-- Fixed base -->
        <body name="base" pos="0 0 1.3">
            <!-- Pendulum arm -->
            <body name="pendulum_arm" pos="0 0 0">
                <joint name="pendulum_joint" type="hinge" axis="0 1 0" pos="0 0 0"/>
                <geom name="pendulum_arm_geom" type="capsule" fromto="0 0 0 0 0 -1" size="0.02"/>
                <!-- Point mass at the tip -->
                <body name="pendulum_tip" pos="0 0 -1">
                    <geom name="pendulum_tip_mass" type="sphere" size="0.06" density="1000"/>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name = "joint_motor" joint="pendulum_joint" ctrlrange="-10 10" gear="1"/>
    </actuator>

    <sensor>
        <jointpos name="joint_pos" joint="pendulum_joint"/>
        <jointvel name="joint_vel" joint="pendulum_joint"/>
    </sensor>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <camera name="default" pos="2 0 5" xyaxes="0 1 0 0 0 1"/>
  </worldbody>
</mujoco>